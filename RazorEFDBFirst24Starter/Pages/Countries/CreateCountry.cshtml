@page
@model RazorEFDBFirst24Starter.Pages.Countries.CreateCountryModel
@{
    ViewData["Title"] = "CreateCountry";
}

<h1>Create a Country</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.Country.Code" class="control-label"></label>
                <input asp-for="@Model.Country.Code" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="@Model.Country.Name" class="control-label"></label>
                <input asp-for="@Model.Country.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.Country.PopulationNumber" class="control-label"></label>
                <input asp-for="@Model.Country.PopulationNumber" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="IndexCountry">Back to List</a>
</div>

